<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ttt.noughtsandcrosses.splash">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="Noughts and Crosses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:id="@+id/title"
                android:background="#b41c04"
                android:textColor="#FFF"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="30dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo"
                android:layout_marginTop="34dp"
                android:id="@+id/logo"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:padding="50dp">

            <Button
                android:text="Start Game"
                android:layout_width="match_parent"
                android:id="@+id/btnStart"
                android:layout_marginTop="10dp"
                android:background="#000"
                android:textColor="#f3e00f"
                android:layout_below="@+id/btnregister"
                android:layout_alignStart="@+id/btnregister"
                android:layout_height="50dp" />

            <Button
                android:text="Register"
                android:layout_width="match_parent"
                android:id="@+id/btnregister"
                android:background="#000"
                android:textColor="#f3e00f"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:layout_height="50dp" />

            <Button
                android:text="High Score"
                android:layout_width="match_parent"
                android:id="@+id/btnhighscore"
                android:background="#000"
                android:textColor="#f3e00f"
                android:layout_below="@+id/btnStart"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/btnregister" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
